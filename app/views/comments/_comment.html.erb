<%# app/views/comments/_comment.html.erb %>

<div class="card mb-3" id="<%= dom_id comment %>">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start">
      <p class="card-text me-3"><%= comment.content %></p>

      <% if can? :destroy, comment %>
        <%= button_to 'Delete', [comment.post, comment], method: :delete, class: 'btn btn-sm btn-outline-danger flex-shrink-0' %>
      <% end %>
    </div>

    <footer class="blockquote-footer mt-2">
      <%= comment.user&.name || "Anonymous" %> | <%= time_ago_in_words(comment.created_at) %> ago
    </footer>
  </div>
</div>